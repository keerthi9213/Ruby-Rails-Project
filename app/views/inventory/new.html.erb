<!-- app/views/birdhouses/edit.html.erb -->

<h1>Add Birdhouse</h1>
<%= bootstrap_form_with model: @birdhouse, url: save_path, method: :post, data: { turbo: false } do |form| %>

  <%= form.file_field :figure_image %>
  <div class="field">
    <%= form.text_field :material, id: :birdhouse_material,  value: @birdhouse.material, required: true %>
  </div>
  <div class="field">
    <%= form.text_field :color, id: :birdhouse_color, value: @birdhouse.color,required: true %>
  </div>
  <div class="field">
    <%= form.text_field :style, id: :birdhouse_style, value: @birdhouse.style,required: true %>
  </div>
  <div class="field">
    <%= form.text_field :roof_design, id: :birdhouse_roof_design, value: @birdhouse.roof_design,required: true %>
  </div>
  <div class="field">
    <%= form.select :size, ['S', 'M', 'L', 'XL'], {}, { id: :birdhouse_size , selected: @birdhouse.size} %>
  </div>
  <div class="field">
    <%= form.text_field :artistic_details, id: :birdhouse_artistic_details, value: @birdhouse.artistic_details,required: true %>
  </div>
  <div class="field">
    <%= form.number_field :quantity, id: :birdhouse_quantity, value: @birdhouse.quantity,required: true %>
  </div>
  <div class="actions">
    <%= form.submit "Add Birdhouse" %>
  </div>
<% end %>

<%= link_to 'Back to Inventory', inventory_path %>
