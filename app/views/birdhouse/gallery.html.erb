<div class="gallery-container">
  <% @birdhouses.each do |birdhouse| %>
    <div class="gallery-item">
      <%= image_tag "birdhouse#{birdhouse.id}.jpg", class: 'birdhouse-image' %>
      <p class="birdhouse-style"><%= birdhouse.Style.capitalize %></p>
      <p class="birdhouse-likes">Likes: <%= birdhouse.likes %></p>
      <%= button_to 'Upvote', upvote_birdhouse_path(birdhouse), method: :put, class: 'upvote-button'%>
    </div>
  <% end %>
</div><style>
  /* ... other styles ... */

  .gallery-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Adjust the minmax values as needed */
    gap: 20px;
    padding: 20px;
  }

  .gallery-item {
    text-align: center;
    border: 1px solid #ccc;
    padding: 15px;
    border-radius: 8px;
    background-color: #f9f9f9;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .birdhouse-image {
    width: 100%; /* Adjust to set the width for all images */
    height: 200px; /* Adjust to set the height for all images */
    object-fit: cover; /* This will cover the area without distorting the aspect ratio */
    border-radius: 4px;
    margin-bottom: 10px;
  }

  .birdhouse-style {
    font-weight: bold;
    margin: 5px 0;
    color: #333;
  }
  

  .birdhouse-likes {
    color: #555;
    font-size: 0.9em;
  }
  a {
    color: white;
    text-decoration: none;
  }

  /* ... other styles ... */
</style>