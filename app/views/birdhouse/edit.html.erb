<!-- app/views/birdhouses/edit.html.erb -->

<h1>Edit Birdhouse</h1>
<%= bootstrap_form_with(model: @birdhouse, local: true) do |form| %>

  <%= form.file_field :figure_image %>
  <div class="field">
    <%= form.select :material, ['Ceramic', 'Wood', 'Stoneware'], { selected: @birdhouse.material, required: true }, { id: :birdhouse_material } %>
  </div>
  <div class="field">
    <%= form.select :color, ['Brown', 'White', 'Blue', 'Green'], { selected: @birdhouse.color, required: true }, { id: :birdhouse_color } %>
  </div>
  <div class="field">
      <%= form.select :style, ['Vintage', 'Modern', 'Rustic', 'Classic'], { selected: @birdhouse.style, required: true }, { id: :birdhouse_style } %>
  </div>
  <div class="field">
        <%= form.select :roof_design, ['Classic Teapot Lid', 'Sleek Round Lid', 'Pitched Barn Roof', 'Smooth Dome Lid'], { selected: @birdhouse.roof_design, required: true }, { id: :birdhouse_roof_design } %>
  </div>
  <div class="field">
    <%= form.select :size, ['S', 'M', 'L', 'XL'], { selected: @birdhouse.size, required: true }, { id: :birdhouse_size } %>
  </div>
  <div class="field">
    <%= form.select :artistic_details, ['Abstract Geometric Patterns', 'Stained Glass Panels', 'Hand-painted floral design', 'Carved Wood Details'], { selected: @birdhouse.artistic_details, required: true }, { id: :birdhouse_artistic_details } %>
  </div>
  <div class="field">
    <%= form.number_field :price, id: :birdhouse_price, value: @birdhouse.price, step: 'any', required: true %>
  </div>
  <div class="field">
    <%= form.number_field :quantity, id: :birdhouse_quantity, value: @birdhouse.quantity,required: true %>
  </div>
  <div class="actions">
    <%= form.submit "Update Birdhouse" %>
  </div>
<% end %>

<%= link_to 'Back to Inventory', inventory_path %>